@model IEnumerable<WaterCoolerWorld.Models.Testimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_WCW_Admin.cshtml";
}

<hr />
<div class="container" style="min-height: 500px">
    <a href="@Url.Action("Admin", "Home")">
        <button class="btn btn-info"><span class="glyphicon glyphicon-chevron-left"></span> Admin</button>
    </a>
    <div class="row">
        <div class="col-xs-9">
            <h2><span style="border-bottom: 2px solid #00B7EB; padding-right: 10px;">All Testimonials</span></h2>
        </div>
        <div class="col-xs-3">
            <a href="@Url.Action("Create", "Testimonials")">
                <button class="btn btn-success pull-right" style="margin: 20px 0 10px 0"><span class="glyphicon glyphicon-plus"></span> Add Testimonial</button>
            </a>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
</div>