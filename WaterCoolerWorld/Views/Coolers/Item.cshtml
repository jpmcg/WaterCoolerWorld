@model WaterCoolerWorld.Models.Cooler

@{
    ViewBag.Title = "Item";
    var imagePath =  Model.Image.Name;
}
@Html.Partial("_CarouselParital")
<div class="container">
    <div class="row wcw-med-margin-top">
        <div class="col-sm-6">
            <div class="item-outer">
                <img class="center-block" src="~/Images/@imagePath" />
            </div>
        </div>
        <div class="col-sm-6">
            <hr class="hr-blue" />
            <h1 class="wcc-h1 text-center">@Model.Name</h1>
            <hr class="hr-blue"/>
            @Html.Raw(Html.Encode(@Model.FullDescription).Replace("\n", "<br />"))
            <hr class="hr-blue"/>
            <p style="text-align: center; font-size: 2em;"><strong>Prices from: £@Model.Price</strong></p>
       @*   @Html.Raw(@Model.FullDescription)*@
        </div>
        <hr />
        <div class="col-sm-12">
            <h2>Contact Us</h2>
            <p>If you would like anymore information on this model you contact us using the form below.
        </div>
        <div class="col-sm-8">
            <form>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea type="textarea" class="form-control" id="message" placeholder="Your message..."></textarea>
                </div>
                <button type="submit" class="btn btn-info form-control"><span class="glyphicon glyphicon-envelope"></span> Send</button>
            </form>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-primary wcw-small-margin-top" style="margin-top: 25px;">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="ion-android-system-home"></span> Information</h3>
                </div>
                <div class="panel-body">
                    <address class="no-margin">
                        <strong>Water Cooler World</strong><br /><br />
                        <p><b><span class="glyphicon glyphicon-home"></span> </b>Suite 3 Fountain Centre,<br />Collage Street,<br />Belfast BT1 6ET
                        <p><b><span class="glyphicon glyphicon-phone"></span> </b>02890 313 818
                        <p><b><span class="glyphicon glyphicon-envelope"></span> </b>sales.ni@watercoolerworld.com
                    </address>
                </div>
            </div>
        </div>
    </div>
</div>